<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pomodoro - Task List</title>
    <link rel="stylesheet" type="text/css" href="/css/home-style.css">
    <link rel="icon" href="/icons/favicon.ico" type="image/x-icon" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="/lib/task-list.js" type="text/javascript"></script>
  </head>

  <body>
    <div id="titlebar">
      <ul>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
      <div id="title">
        <h1>Pomodoro</h1>
      </div>
      <div id="timer">25:00</div>
		</div>

    <div id="progressBar">
      <div id="progress"></div>
    </div>

		<div id="container">
      <form>
        <input id="task-input" type="text" name="task" placeholder="Add a new task..." required/>
        <input id="time-input" type="number" name="count" placeholder="Work intervals..." min=1 required/>
        <input type="submit" style="position: absolute; left: -9999px"/>
      </form>
      <div id="task-list">
        <div id="task-container">
          <% for (var i=0; i < tasks.length; i++) { %>
            <div class="task" id=<%=i%>>
              <div class="task-name"><%= tasks[i].item %></div>
              <% if (tasks[i].count === tasks[i].complete) { %>
                <button class="start-button" disabled=true>Done</button>
                <style>
                  .task {
                    background-color: rgb(179, 255, 179);
                  }
                </style>
              <% } else { %>
                <button class="start-button">Start Task</button> 
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
		</div>

  </body>
</html>
